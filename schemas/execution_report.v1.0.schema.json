{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Zeke142/peoplerun-wp-adapter/schemas/execution_report.v1.0.schema.json",
  "title": "PeopleRun Execution Report â€” v1.0",
  "description": "Schema for a publish/execution report artifact written to runtime/reports.",
  "type": "object",
  "required": ["run_id", "ts", "status", "repo", "branch", "summary"],
  "properties": {
    "run_id": { "type": "string" },
    "ts": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["ok", "failed", "partial"] },
    "repo": { "type": "string" },
    "branch": { "type": "string" },

    "summary": {
      "type": "object",
      "required": ["steps_total", "steps_ok", "steps_failed"],
      "properties": {
        "steps_total": { "type": "integer", "minimum": 0 },
        "steps_ok": { "type": "integer", "minimum": 0 },
        "steps_failed": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },

    "links": {
      "type": "object",
      "properties": {
        "commit_url": { "type": "string", "format": "uri" },
        "run_artifact_path": { "type": "string" },
        "registry_append_path": { "type": "string" }
      },
      "additionalProperties": true
    },

    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" },
          "details": {}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
